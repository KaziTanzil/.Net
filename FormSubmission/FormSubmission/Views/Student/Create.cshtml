<h2>Create Form</h2>
@{
        bool CheckGender(string g)
        {
            if (Model.Gender != null && Model.Gender.Equals(g))
            {
                return true;
            }
            return false;
        }

    bool CheckHobbies(string h)
    {
        if (Model.Hobbies != null)

        {
            foreach (var hobby in Model.Hobbies)
            {
                if (hobby.Equals(h))
                {
                    return true;
                }
            }
        }
        return false;
    }
}

<!DOCTYPE html>
<html>
<head>
    <title>Student Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h3 class="text-center mb-4">Student Information Form</h3>

        <form method="post" action="">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" name="Name" class="form-control" placeholder="Enter full name" value="@Model.Name" />
                <br />
                <span class="text-danger">@Html.ValidationMessage("Name")</span>
                <br />
            </div>

            <div class="mb-3">
                <label class="form-label">Student ID</label>
                <input type="text" name="Id" class="form-control" placeholder="Enter student ID" value="@Model.Id" />
                <br />
                <span class="text-danger">@Html.ValidationMessage("Id")</span>
                <br />
            </div>

            <div class="mb-3">
                <label class="form-label">Gender: </label>
                <input type="radio" name="Gender" value="Male" checked="@CheckGender("Male")" /> Male
                <input type="radio" name="Gender" value="Female" checked="@CheckGender("Female")" /> Female
                <br />
                <span class="text-danger">@Html.ValidationMessage("Gender")</span>
                <br />
            </div>

            <div class="mb-3">
                <label class="form-label">Date of Birth</label>
                <input type="date" name="DOB" class="form-control" value="@Model.DOB.ToString("yyyy-MM-dd")" />
                <br />
                @*<span class="text-danger">@Model.ErrorMessage</span>*@
                <br />
            </div>

            <div class="mb-3">
                <label class="form-label">Gmail</label>
                <input type="email" name="Gmail" class="form-control" placeholder="Enter Gmail address" value="@Model.Gmail" />
                <br />
                <span class="text-danger">@Html.ValidationMessage("Gmail")</span>
                <br />
            </div>

            <div class="mb-3">
                <label class="form-label">Address</label>
                <textarea name="Address" class="form-control" rows="3" placeholder="Enter address" value="@Model.Address"></textarea>
                <br />
                <span class="text-danger">@Html.ValidationMessage("Address")</span>
                <br />
            </div>

            <div class="mb-3">
                <label class="form-label">Hobbies: </label>
                <input type="checkbox" name="Hobbies[]" value="Reading" checked="@CheckHobbies("Reading")" /> Reading
                <input type="checkbox" name="Hobbies[]" value="Travelling" checked="@CheckHobbies("Travelling")" /> Travelling
                <input type="checkbox" name="Hobbies[]" value="Gerdening" checked="@CheckHobbies("Gerdening")" /> Gerdening
                <br />
                <span class="text-danger">@Html.ValidationMessage("Hobbies")</span>
                <br />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>


