@model CrudOperation.EF.student
@{
    ViewBag.Title = "DeleteStudent";
}

<h2>Delete Student</h2>

<p>Are you sure you want to delete this student?</p>

<div class="border p-3">
    <p><strong>ID:</strong> @Model.ID</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Father's Name:</strong> @Model.Fname</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Mobile:</strong> @Model.Mobile</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

@using (Html.BeginForm("DeleteStudent", "Student", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ID)

    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a href="@Url.Action("StudentList", "Student")" class="btn btn-secondary">Cancel</a>
}
